@model Data.Models.tbHospital


@using (Html.BeginForm("UpSertHospital", "Hospital", FormMethod.Post, new { id = "HospitalForm", enctype = "multipart/form-data" }))
{
    <div class="modal-header bg-blue">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
        <h4 class="modal-title">
            <img src="~/Content/Image/hospital1.png" width="40" height="40" />&nbsp;&nbsp; ADD NEW HOSPITAL
        </h4>
    </div>

 
    <div class="modal-body" id="mb">
      
        <div class="row">
            <div class="col-sm-12">
                <div class="col-sm-12">
                    <center><img src="@Model.PhotoUrl" style="margin:10px" height="200" width="200" id="imagePreviewHospital" /></center>        
                    <input type="file" id="filedata" class="form-control btn btn-default btn-file" name="" accept="image/jpeg, image/png" onchange="ShowImagePreviewHospital(this, document.getElementById('imagePreviewHospital'))" />
                </div>
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-sm-12">
                <div class="col-sm-6">
                    <label>Name</label><span class="text-danger">*</span>
                    @Html.TextBoxFor(a => a.Name, new { placeholder = "", @class = "form-control", @required = "required" })
                </div>
                <div class="col-sm-6">
                    <label>Phone</label>
                    @Html.TextBoxFor(a => a.Phone, new { placeholder = "", @class = "form-control", @required = "required" })
                </div>
            </div>
        </div>
        <br />
           
        <div class="row">
            <div class="col-sm-12">
                <div class="col-sm-6">
                    <label>State</label>&nbsp;<span class="text-danger">*</span>
                    <select name="State" id="DD_state" class="form-control">
                        <option value="">Select State</option>
                    </select>
                   
                    <input type="hidden" id="state" value="@Model.State" />
                  
                </div>
                <div class="col-sm-6">
                    <label>TownShip</label>&nbsp;<span class="text-danger">*</span>
                    <select name="Township" id="DD_township" class="form-control">
                        <option value="">Select Township</option>
                    </select>
                    <input type="hidden" id="township" value="@Model.Township" />
                </div>
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-sm-12">
                <div class="col-sm-12">
                    <label>Address</label>
                    @Html.TextAreaFor(a => a.Address, new { placeholder = "", @class = "form-control" })
                </div>
                </div>
        </div>
        <br />
     
            @*</div>*@
        </div>
                    @Html.HiddenFor(m => m.ID)
                    <input type="hidden" name="Image" id="hospital_image" />
                    @Html.HiddenFor(m => m.IsDeleted)
                    @Html.HiddenFor(m => m.Accesstime)

    <div class="row">
        <div class="col-sm-12">
            <div class="col-sm-12">
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-rounded" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary btn-rounded" id=""><span class="icon-add"></span> Save</button>
                </div>
            </div>

        </div>

    </div>
}
