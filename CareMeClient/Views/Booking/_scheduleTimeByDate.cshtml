@foreach (var list in Model.scheduledatas.OrderBy(a=>a.Fromtime))
{

        <div class="" align="center"> 
            <a onclick="DoctorListByTime(this)" data-fromtime="@list.Fromtime" data-appointmentID="@list.ID" data-totime="@list.Totime"
               class="btn btn-danger btn-lg btn-rounded btn-block" id="btn">@list.Fromtime.Value.ToShortTimeString() - @list.Totime.Value.ToShortTimeString()</a>
        </div>


