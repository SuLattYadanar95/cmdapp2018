                    <span class="glyphicon glyphicon-chevron-left"></span>

                </span>
                <span type="button" data-appdate="@Model.appointDatetime" data-appdate1="@Model.appointDatetime.Value.AddDays(1)" onclick="next(this)" class="right carousel-control " data-slide="next" style="background-image: none;">
