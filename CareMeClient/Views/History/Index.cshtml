@section scripts{
    <script type="text/javascript">
        var page = 1;
        var pagesize = 10;
        var name;
        var status;
        var doctorname;
        var datetime;
        $(function () {
            LoadHistoryList();
            initPaging();

            $('.daterange-single').daterangepicker({
                singleDatePicker: true
            });


        });


        function initPaging() {
            $("#div_List").on("click", ".pagedList a", function (e) {
                e.preventDefault();
                var $a = $(this).attr("href");
                try {
                    var pageurl = $a.split(/=/);
                    page = pageurl[1];
                    if (page == null) {
                        page = 1;
                    }
                }
                catch (e) {
                    page = 1;
                }
                LoadMainList();
            });
        }

        function statusFilter(e) {
            status = e;
            Search();
        }

        function Search() {
            name = $('#txt_itemName').val();
            datetime = $('#datetime').val();
            LoadHistoryList();
        }


         function LoadHistoryList() {
            $('#loading').show();
            $.ajax({
                cache: false,
                url: '@Url.Action("_historylist", "History")',
                data: { name: name, datetime: datetime, pagesize: pagesize, page: page },
                beforeSend: function () {

                },
                success: function (result) {
                    $('#div_List').empty().append(result);
                },
                complete: function () {
                    $('#loading').hide();
                    $('#txt_itemName').val("");
                    $('#datetime').val("");
                }
            });
        }



    </script>
}


