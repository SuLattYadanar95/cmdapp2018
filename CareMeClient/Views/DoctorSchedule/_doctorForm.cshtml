@model Data.ViewModels.DoctorSpecialityViewModel


@using (Html.BeginForm("UpSertDoctor", "Doctor", FormMethod.Post, new { id = "DoctorForm", enctype = "multipart/form-data" }))
{
    <div class="modal-header bg-blue">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
        <h4 class="modal-title">
            <img src="~/Content/Image/doctor.png" width="40" height="40" style="border-radius:20px" />&nbsp;&nbsp; ADD NEW DOCTOR
        </h4>
    </div>

   
    <div class="modal-body" id="mb">
        <div class="row">
            <div class="col-sm-12">
                <div class="col-sm-12">
                       <center><img src="@Model.doctor.PhotoUrl" style="margin:10px" height="150" width="150" id="imagePreview" /></center>
                        <input type="file" id="filedata2" class="form-control btn btn-default btn-file" name="" accept="image/jpeg, image/png" onchange="ShowImagePreview(this,document.getElementById('imagePreview'))" />                 
                </div>
            </div>
        </div>
        <br />


        <div class="row">
            <div class="col-sm-12">
                <div class="col-sm-6">                   
                        <label>Name</label>&nbsp;<span class="text-danger">*</span>
                        @Html.TextBoxFor(a => a.doctor.Name, new { placeholder = "", @class = "form-control", @required = "required" })
                 
                </div>
                @if (Model.doctor.LicenseID != null)
                {
                    <div class="col-sm-6">

                        <label>LicenseID</label>&nbsp;<span class="text-danger">*</span>
                        @Html.TextBoxFor(a => a.doctor.LicenseID, new { placeholder = "", @class = "form-control", @required = "required" })

                    </div>
                }
                else
                {
                    <div class="col-sm-6">

                        <label>LicenseID</label>&nbsp;<span class="text-danger">*</span>
                        <input type="text" name="doctor.LicenseID" class="form-control" required/>

                    </div>
                }
               
            </div>
            </div>
        <br />

        <div class="row">

            <div class="col-sm-12">
                @if (Model.specialty != null)
                {
                    <div class="col-sm-6">

                        <label>Speciality</label>&nbsp;<span class="text-danger">*</span>
                        <select class="form-control" name="specialty.ID" id="DD_specialty"></select>
                        <input hidden id="specialtyID" value="@Model.specialty.ID" />
                        <input hidden id="specialty" name="specialty.Specialty" value="@Model.specialty.Specialty" />

                    </div>
                }
                else
                {
                    <div class="col-sm-6">

                        <label>Speciality</label>&nbsp;<span class="text-danger">*</span>
                        <select class="form-control" name="specialty.ID" id="DD_specialty"></select>
                        <input hidden id="specialtyID" value="" />
                        <input hidden id="specialty" name="specialty.Specialty" value="" />

                    </div>
                }

                <div class="col-sm-6">
                
                        <label>Type</label>&nbsp;<span class="text-danger">*</span>
                        @{ var type = new List<SelectListItem>() {
                                       new SelectListItem {Value="", Text="-- Select --" },
                                       new SelectListItem {Value="Child", Text="Child" },
                                       new SelectListItem {Value="Adult", Text="Adult" }
                                    };
                        }
                        @Html.DropDownListFor(Model => Model.doctor.Type, type, new { @class = "form-control", name = "select", @required = "required" })
                 
                </div>
            </div>
            </div>

        <br />


        <div class="row">
            <div class="col-sm-12">
                <div class="col-sm-12">
                    
                        <label>Qualification</label>&nbsp;<span class="text-danger">*</span>
                        @Html.TextAreaFor(a => a.doctor.Qualification, new { placeholder = "", @class = "form-control", @required = "required" })
                   
                </div>
            </div>

</div>






            @*<div class="form-group col-md-3">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" value="true" name="doctor.IsSpecialist" checked="@Model.doctor.IsSpecialist" />
                        <input type="hidden" value="false" name="doctor.IsSpecialist" />
                        IsSpecialist<span class="text-danger">*</span>
                    </label>
                </div>
            </div>

            <div class="form-group col-md-3">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" value="true" name="doctor.IsActive" checked="@Model.doctor.IsActive" />
                        <input type="hidden" value="false" name="doctor.IsActive" />
                        IsActive<span class="text-danger">*</span>
                    </label>
                </div>
            </div>*@




    </div>

                    @Html.HiddenFor(m => m.doctor.ID)
                    <input type="hidden" name="doctor.Image" id="photo_image" />
                    @*@Html.HiddenFor(m => m.doctor.Image, new { id = "image" })*@
                    @Html.HiddenFor(m => m.doctor.IsDeleted)
                    @Html.HiddenFor(m => m.doctor.Accesstime)

                            @Html.HiddenFor(m => m.hospitalid)
                            @Html.HiddenFor(m => m.hospitalname)
                          



                 <div class="row">
                     <div class="col-sm-12">
                         <div class="col-sm-12">
                             <div class="modal-footer">
                                 <button type="button" class="btn btn-default btn-rounded" data-dismiss="modal">Cancel</button>
                                 <button type="submit" class="btn btn-primary btn-rounded" id=""><span class="icon-add"></span> Save</button>
                             </div>
                         </div>
                       
                     </div>
                    
                 </div>
                   
                    }


