
@model Data.Models.tbDoctor


@using (Html.BeginForm("UpSertDoctor", "Doctor", FormMethod.Post, new { id = "DoctorForm" }))
{
    <div class="modal-header bg-blue">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
        <h4 class="modal-title">
            <img src="~/Content/Image/doctor.png" width="40" height="40" /> ADD NEW DOCTOR
        </h4>
    </div>

    @*<div class="form-group col-md-6">
            <label>Name</label><span class="text-danger">*</span>
            @Html.TextBoxFor(m => m.Name, new { placeholder = "Type Name", @class = "form-control" })
            <div class="messages"></div>
        </div>*@
    <div class="modal-body" id="mb">
        <div class="row">
            <div class="form-group col-md-3" >
                <label>Name</label><span class="text-danger">*</span>
                @Html.TextBoxFor(a => a.Name, new { placeholder = "", @class = "form-control", @required = "required" })
            </div>

            <div class="form-group col-md-3">
                <label>Speciality</label><span class="text-danger">*</span>
                @Html.TextBoxFor(a => a.Specialty, new { placeholder = "", @class = "form-control", @required = "required" })
            </div>

            <div class="form-group col-md-3">
                <label>LicenseID</label>
                @Html.TextBoxFor(a => a.LicenseID, new { placeholder = "", @class = "form-control", @required = "required" })
            </div>

          

            <div class="form-group col-md-3">
                <label>Type</label><span class="text-danger">*</span>
                @{ var type = new List<SelectListItem>() {
                                       new SelectListItem {Value="", Text="-- Select --" },
                                       new SelectListItem {Value="Child", Text="Child" },
                                       new SelectListItem {Value="Adult", Text="Adult" }
                                    };
                }
                @Html.DropDownListFor(Model => Model.Type, type, new { @class = "form-control", name = "select", @required = "required" })
            </div>

            <div class="form-group col-md-12">
                <label>Qualification</label>
                @Html.TextAreaFor(a => a.Qualification, new { placeholder = "", @class = "form-control" })
            </div>

            <div class="form-group col-md-3">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" value="true" name="IsSpecialist" checked="@Model.IsSpecialist" />
                        <input type="hidden" value="false" name="IsSpecialist" />
                        IsSpecialist<span class="text-danger">*</span>
                    </label>
                </div>
            </div>

            <div class="form-group col-md-3">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" value="true" name="IsActive" checked="@Model.IsActive" />
                        <input type="hidden" value="false" name="IsActive" />
                        IsActive<span class="text-danger">*</span>
                    </label>
                </div>
            </div>

            @*<div class="form-group col-md-3">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" class="border-warning-600 text-warning-800">
                        Info checkbox
                    </label>
                </div>
                </div>*@

            </div>
    </div>
                    @Html.HiddenFor(m => m.ID)
                    @Html.HiddenFor(m => m.Image)
                    @Html.HiddenFor(m => m.IsDeleted)
                    @Html.HiddenFor(m => m.Accesstime)
                   



                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" id=""><span class="icon-add"></span> Save</button>
                    </div>
                    }


