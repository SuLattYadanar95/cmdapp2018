@using (Html.BeginForm("UpSertDoctor", "Doctor", FormMethod.Post, new { id = "GenerateScheduleForm" }))
{
    <div class="modal-header bg-blue">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
        <h4 class="modal-title">
            <img src="https://portalvhdslvb28rs1c3tmc.blob.core.windows.net/yammo/careme/iconpack/icon_schedule.png" width="40" height="40" />&nbsp;&nbsp;Generate Schedule
        </h4>
    </div>

    <div class="modal-body" id="mb">
        <div class="row">

            <div class="col-sm-12">
                <label class="h4 zawgyi_text">Hospital or Clinic Name :  @ViewBag.hospitalname</label><br />

                <select class="form-control zawgyi_text" name="specialty.ID" id="DDD_Doctor"></select>
            </div>
        </div>
       
        <div class="row" id="template_schedule">
            <div class='col-sm-12'>
                <div class="panel panel-flat mt-10">
                    <div class="table-responsive" id="generateSchedule">
                        
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class='col-sm-6'>
                <label class="h4">From Date</label>
                <div class="input-group">
                    <input type="text" class="form-control daterange-single_form" id="fromdatepickerscheduleform" value="" autocomplete="off">
                    <span class="input-group-addon"><i class="icon-calendar22"></i></span>
                </div>
            </div>

            <div class='col-sm-6'>
                <label class="h4">To Date</label>
                <div class="input-group">
                    <input type="text" class="form-control daterange-single_form" id="todatepickerscheduleform" value="" autocomplete="off">
                    <span class="input-group-addon"><i class="icon-calendar22"></i></span>
                </div>
            </div>
        </div>

        <br />

    </div>




        <div class="modal-footer">
            <button type="button" class="btn btn-default btn-rounded" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary btn-rounded" id=""><span class="icon-add"></span> Save</button>
        </div>
}


